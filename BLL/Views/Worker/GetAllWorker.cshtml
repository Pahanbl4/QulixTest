
@model IEnumerable<BLL.Models.WorkerModel>
@{
    ViewBag.Title = "GetAllWorker";
}


<h3>
    Workers
    <br />
    @Html.ActionLink("Add new worker", "Create", "Worker", new { @type = "button", @class = "btn btn-success" })
</h3>
<br />



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WorkerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyId)
            </td>
            <td>
                <button class="btn btn-warning" type="button">@Html.ActionLink("Edit", "Edit", new { id = item.WorkerId })</button>
                |
                <button class="btn btn-danger" type="button">@Html.ActionLink("Delete", "Delete", new { id = item.WorkerId })</button>

            </td>
        </tr>
    }
</table>
